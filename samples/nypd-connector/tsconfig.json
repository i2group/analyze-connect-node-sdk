{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"]
}
